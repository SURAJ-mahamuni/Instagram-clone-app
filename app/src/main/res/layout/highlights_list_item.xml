<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dimen_16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ring"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/high_light_add" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/high_light_img"
        android:layout_width="@dimen/dimen_56dp"
        android:layout_height="@dimen/dimen_56dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/ring"
        app:layout_constraintEnd_toEndOf="@+id/ring"
        app:layout_constraintStart_toStartOf="@+id/ring"
        app:layout_constraintTop_toTopOf="@+id/ring"
        app:shapeAppearanceOverlay="@style/roundedImage"
        app:srcCompat="@drawable/dummy_img" />

    <TextView
        android:id="@+id/high_light_text"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_font"
        android:text="New"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ring"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>